<html>
	<head>
		<title>GooglESCOM</title>
		<script src="jquery.min.js"></script>
	</head>
	<body style="font-family:arial;">
		<div style="text-align:center">
			<h1>GooglESCOM</h1>
			
			<form method="post" enctype="multipart/form-data" action="/upload" id="form-file" class="block">
				<h2>Subir archivo</h2>
				<input type="file" accept="text/*" name="file"><br><br>
				<button>Guardar</button>
			</form>
			
			<form method=get id="form-search" class="block">
				<h2>Buscar cadena</h2>
				<input type="text" id="search" name="search"><br><br>
				<button>Buscar</button>
			</form>
			<div class="block" id="search-res"></div>
		</div>
	</body>
</html>

<script>
	$("#search-res").hide();
	$('#form-search').submit(function(){
		$("#search-res").show();
		$("#search-res").html("<img src='load.gif' width=50/>");
		$.ajax({
			type: "POST",
			url: "/search",
			data:{
				query:$("#search").val()
			},
			success: function(data){
				$("#search-res").html(data);
			}
		});
		return false;
	});
</script>

<style>
	h1{
		color:#009D9D;
	}
	body{
		background-color:#004242;
	}
	.block{
		background-color:#006D6D;
		padding:20px;
		margin-left:25%;
		margin-right:25%;
		border-radius:10px;
	}
	button{
		background-color:#005959;
		border:0;
		padding:10px;
		border-radius:10px;
		color:#009D9D;
	}
	#search{
		height:40px;
		font-size:20px;
		width:300px;
		border-radius:10px;
	}
</style>
